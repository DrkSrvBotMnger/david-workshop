# .editorconfig

root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Markdown files: allow trailing spaces (for line breaks)
[*.md]
trim_trailing_whitespace = false

# YAML files (e.g. GitHub Actions or Docker config)
[*.yml]
indent_size = 2

# Replit files (optional)
[.replit]
indent_style = space
indent_size = 4
